{% extends "layout.html.twig"%}
{% block contenido%}
    <form class="row">
        <h3 style="color: red;" class="text-center">{% if mensaje is defined %}{{ mensaje }}{% endif %}</h3>
       <div class="col">
           <div class="row">
               <h2>Datos bodega</h2>
               <a name="editar" class="btn btn-outline-warning" href="index.php?controller=bodegas&action=editar&idBodega={{bodega["ID_BODEGA"]}}">Editar</a>
               <a name="volver" class="btn btn-outline-primary" href="index.php?controller=bodegas&action=carga">Volver</a>
               <a name="eliminar" class="btn btn-outline-danger" href="index.php?controller=bodegas&action=borrar&idBodega={{bodega["ID_BODEGA"]}}">Eliminar</a>
           </div>
           <hr>
           <div class="col">
               <div class="row form-group">
                   <label for="nombre">Nombre</label>
                   <input type="text" class="form-control" id="nombre" value="{{  bodega["NOMBRE"] }}" disabled>
               </div>

               <div class="row form-group">
                   <label for="direccion">Dirección</label>
                   <input type="text" class="form-control" id="direccion" value="{{ bodega["DIRECCION"]}}" disabled>
               </div>

               <div class="row form-group">
                   <label for="localizacion">Localización</label>
                   <input type="text" class="form-control" id="localizacion" value="{{  bodega["LOCALIZACION"] }}" disabled>
               </div>

               <div class="row form-group">
                   <label for="email">Email</label>
                   <input type="email" class="form-control" id="email" value="{{ bodega["EMAIL"]}}" disabled>
               </div>

               <div class="row form-group">
                   <label for="tlfn">Teléfono</label>
                   <input type="number" class="form-control" id="tlfn"  value="{{ bodega["TELEFONO"] }}" disabled>
               </div>

               <div class="row form-group">
                   <label for="contacto">Persona de contacto</label>
                   <input type="text" class="form-control" id="contacto" value="{{ bodega["CONTACTO"] }}" disabled>
               </div>

               <div class="row form-group">
                   <label for="fundacion">Año de fundación</label>
                   <input type="number" class="form-control" id="fundacion" value="{{ bodega["FUNDACION"] }}" disabled>
               </div>

               <h3>¿Dispone de restaurante?</h3>
               <div class="radio">
                   <label>
                       <input type="radio" name="restaurante" id="restSi" value="1" {{ bodega["RESTAURANTE"]?'checked':'' }} disabled>
                       Sí
                   </label>
               </div>
               <div class="radio">
                   <label>
                       <input type="radio" name="restaurante" id="restNo" value="0" {{ not bodega["RESTAURANTE"]?'checked':'' }} disabled>
                       No
                   </label>
               </div>

               <h3>¿Dispone de hotel?</h3>
               <div class="radio">
                   <label>
                       <input type="radio" name="hotel" id="hotelSi" value="1" {{ bodega["HOTEL"]?'checked':'' }} disabled>
                       Sí
                   </label>
               </div>
               <div class="radio">
                   <label>
                       <input type="radio" name="hotel" id="hotelNo" value="0" {{ not bodega["HOTEL"]?'checked':'' }} disabled>
                       No
                   </label>
               </div>
           </div>
       </div>
        <div class="col">
            <h2>Vinos disponibles</h2>
            <a name="annadir" class="btn btn-primary" href="index.php?controller=vinos&action=alta&idBodega={{bodega["ID_BODEGA"]}}">+ Añadir vino</a>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for vino in vinos %}
                    <tr>
                        <th scope="row">{{ vino["NOMBRE"] }}</th>
                        <td>{{ vino["TIPO"] }} </td>
                        <td>
                            <a class="btn btn-outline-primary" name="ver" href="index.php?controller=vinos&action=detalle&idVino={{vino["ID_VINO"]}}">ver</a>
                            <a name="borrar" class="btn btn-outline-danger" href="index.php?controller=vinos&action=borrar&idVino={{vino["ID_VINO"]}}&idBodega={{vino["ID_BODEGA"]}}">borrar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
{%endblock%}