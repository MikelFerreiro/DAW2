{% extends "layout.html.twig"%}
{% block contenido%}
    <form class="col" method="POST" action="index.php?controller=vinos&action={{vino["ID_VINO"]? "modificar&idVino=#{vino['ID_VINO']}":"annadir"}}&idBodega={{ vino["ID_BODEGA"] }}">
        <div class="row">
            <h2 class="col-6">{{ vino?'Modificar':'Nuevo' }} vino</h2>
            <a name="volver" class="btn btn-outline-primary col-2 offset-4" href="index.php?controller={{vino["ID_VINO"]?"vinos&idVino=#{vino['ID_VINO']}":"bodegas&idBodega=#{vino['ID_BODEGA']}"}}&action=detalle">Volver</a>
        </div>
        <hr>
        <div class="col">
            <h3 style="color: red;" class="text-center">{{ mensaje?:''}}</h3>
           <div class="row form-group">
               <label for="nombre">Nombre</label>
               <input type="text" class="form-control" id="nombre" name="nombre" value="{{vino["NOMBRE"]}}">
           </div>

           <div class="row form-group">
               <label for="descripcion">Descripción</label>
               <textarea maxlength="200" class="form-control" id="descripcion" name="descripcion">{{ vino["DESCRIPCION"]}}</textarea>
           </div>

            <div class="row form-group">
               <label for="anio">Año</label>
               <input type="number" class="form-control" id="anio" name="anio" value="{{ vino["ANIO"] }}">
           </div>

           <div class="row form-group">
               <label for="alcohol">Alcohol</label>
               <input type="number" class="form-control" step="0.01" id="alcohol" name="alcohol" value="{{vino["ALCOHOL"]}}">
           </div>

           <div class="row form-group">
               <label for="tipo">Tipo de vino</label>
               <input type="text" class="form-control" id="tipo" name="tipo" value="{{vino["TIPO"]}}">
           </div>

            <input type="submit" name="annadir" class="btn btn-primary float-right" value="{{vino["ID_VINO"]?'Modificar':'Añadir'}}">
        </div>
    </form>
    <br>
    <br>
    <br>
{%  endblock %}