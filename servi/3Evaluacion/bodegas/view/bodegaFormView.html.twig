{% extends "layout.html.twig"%}
{% block contenido%}
    <form class="col" method="POST" action="index.php?controller=bodegas&action={{ bodega? "modificar&idBodega=#{bodega['ID_BODEGA']}" : 'annadir' }}">
        <div class="row">
            <h2 class="col-6">{{ bodega?'Modificar':'Nueva'}} bodega</h2>
            <a name="volver" class="btn btn-outline-primary col-2 offset-4" href="index.php?controller=bodegas&action={{ bodega?"detalle&idBodega=#{ bodega['ID_BODEGA']}":"carga" }}">Volver</a>
        </div>
        <hr>
        <div class="col">
            <h3 style="color: red;" class="text-center">{{ mensaje?:'' }}</h3>
           <div class="row form-group">
               <label for="nombre">Nombre</label>
               <input type="text" class="form-control" id="nombre" name="nombre" value="{{  bodega["NOMBRE"]}}">
           </div>

           <div class="row form-group">
               <label for="direccion">Dirección</label>
               <input type="text" class="form-control" id="direccion" name="direccion" value="{{ bodega["DIRECCION"]}}">
           </div>

            <div class="row form-group">
               <label for="localizacion">Localización</label>
               <input type="text" class="form-control" id="localizacion" name="localizacion" value="{{  bodega["LOCALIZACION"] }}">
           </div>

           <div class="row form-group">
               <label for="email">Email</label>
               <input type="email" class="form-control" id="email" name="email" value="{{ bodega["EMAIL"]}}">
           </div>

           <div class="row form-group">
               <label for="tlfn">Teléfono</label>
               <input type="number" class="form-control" id="tlfn" name="tlfn" value="{{ bodega["TELEFONO"] }}">
           </div>

           <div class="row form-group">
               <label for="contacto">Persona de contacto</label>
               <input type="text" class="form-control" id="contacto" name="contacto" value="{{ bodega["CONTACTO"] }}">
           </div>

           <div class="row form-group">
               <label for="fundacion">Año de fundación</label>
               <input type="number" class="form-control" id="fundacion" name="fundacion" value="{{ bodega["FUNDACION"] }}">
           </div>

           <h3>¿Dispone de restaurante?</h3>
           <div class="radio">
               <label>
                   <input type="radio" name="restaurante" id="restSi" value="1" {{ bodega["RESTAURANTE"]?'checked':'' }}>
                   Sí
               </label>
           </div>
           <div class="radio">
               <label>
                   <input type="radio" name="restaurante" id="restNo" value="0" {{ bodega["RESTAURANTE"]?:'checked' }}>
                   No
               </label>
           </div>

           <h3>¿Dispone de hotel?</h3>
           <div class="radio">
               <label>
                   <input type="radio" name="hotel" id="hotelSi" value="1" {{ bodega["HOTEL"]?'checked'}}>
                   Sí
               </label>
           </div>
           <div class="radio">
               <label>
                   <input type="radio" name="hotel" id="hotelNo" value="0" {{ bodega["HOTEL"]?:'checked' }}>
                   No
               </label>
           </div>
            <input type="submit" name="annadir" class="btn btn-primary float-right" value="{{ bodega? 'Modificar':'Añadir'}}">
        </div>
    </form>
    <br>
    <br>
    <br>
{%endblock%}