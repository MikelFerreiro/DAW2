{% extends "layout.html.twig"%}
{% block contenido%}
    <form class="row" action="index.php">
        <a name="annadir" class="btn btn-primary" href="index.php?controller=bodegas&action=alta">+ Añadir bodega</a>
        <h3 style="color: red;" class="text-center"><?=isset($mensaje)?$mensaje:''?></h3>
        <table class="table table-striped" >
            <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Localización</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Email</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for bodega in bodegas %}
                <tr>
                    <th scope="row">{{  bodega["NOMBRE"] }}</th>
                    <td>{{  bodega["LOCALIZACION"] }}</td>
                    <td>{{ bodega["TELEFONO"] }}</td>
                    <td>{{ bodega["EMAIL"]}}</td>
                    <td>
                        <a class="btn btn-outline-primary" name="entrar" href="index.php?controller=bodegas&action=detalle&idBodega={{bodega["ID_BODEGA"]}}">entrar</a>
                        <a name="borrar" class="btn btn-outline-danger" href="index.php?controller=bodegas&action=borrar&idBodega={{bodega["ID_BODEGA"]}}">borrar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </form>
{%endblock%}